<!--pages/audition/audition.wxml-->
<view class='banner'>
  <swiper class='swiper' indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}" wx:key="{{imgUrls}}">
      <swiper-item class="swiper-item">
        <image src="{{item}}" class="slide-image" mode='scaleToFill'></image>
      </swiper-item>
    </block>
  </swiper>
</view>

<view class='wrap bg2'>
  <form bindsubmit="formSubmit">
    <view class='inp-wrap'>
      <text>宝宝姓名:</text>
      <input placeholder='填写姓名' name='babyname'></input>
    </view>
    <view class='inp-wrap'>
      <picker class='picker-wrap' mode="date" value="{{date}}" start="{{dataStart}}" end="{{dataEnd}}" bindchange="bindDateChange" name="bath">
        <view class="picker">
          <text>宝宝生日:</text>
          <text>{{date}}</text>
        </view>
      </picker>
    </view>
    <view class='inp-wrap'>
      <text>联系电话:</text>
      <input placeholder='填写电话' name="phone" ></input>
    </view>
    <view class='inp-wrap'>
      <picker class='picker-wrap' bindchange="bindPickerChange" value="{{school[index]}}" range="{{school}}" name="school">
        <view class="picker">
          <text> 校区选择: </text>
          <text>{{school[index]}}</text>
        </view>
      </picker>
    </view>
    <view class='btn-wrap'>
      <button class='submit-btn' formType='submit'>立即预约</button>
    </view>
  </form>
</view>